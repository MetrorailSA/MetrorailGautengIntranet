@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_LayoutGallery.cshtml";
}

<div class="row">

    @{var i=1; }

    @foreach (var gallery in Model)
{
    <div class="col-md-4">
        <div class="row col-centered">
            <a href='@Url.Content(string.Concat("~/Gallery/Gallery",i))'>
                <img alt="@gallery.Description " src="@Url.Content("~/Content/Images/Gallery/Gallery" + i + "/" + gallery.FileName) " class=" thumbnail-border" width="180" />
            </a>
        </div>
        <div class="row col-centered">

            <strong>@gallery.Title</strong>
        </div>
    </div>
    i++;
}
    
</div>
<!DOCTYPE html>
@{
    Layout = "_Layout.cshtml";
    string[] pages = { "Internal News", "External News" };
}

<div class="row"><p></p></div>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">

        <div class="jumbotron-news">

            <a class="navbar-brand" href="~/News">
                <h1>
                    In the News...
                </h1>
            </a>
            <br /><br /><br /><br />
            <p class="lead">Internal, local and international news that matters!</p>
            <br /><br />


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    @{
                        foreach (var page in pages)
                        {
                            if (ViewBag.Title == "News - " + page)
                            {
                                <li class="active">
                                    @Html.ActionLink(page, page.Replace(" ", ""), "News")
                                </li>
                            }
                            else
                            {
                                <li>
                                    @Html.ActionLink(page, page.Replace(" ", ""), "News")
                                </li>
                            }
                        }
                    }



                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
        </div>
</nav>
        @RenderBody()

